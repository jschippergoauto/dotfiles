{
  "[dockercompose]": {
    "editor.tabSize": 2
  },
  "[go]": {
    "editor.defaultFormatter": "golang.go"
  },
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    },
    "editor.defaultFormatter": "ms-python.python"
  },
  "[xml]": {
    "editor.defaultFormatter": "redhat.vscode-xml"
  },
  "bookmarks.navigateThroughAllFiles": false,
  "editor.cursorSurroundingLines": 5,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "'Hack Nerd Font Mono', 'Droid Sans Mono', 'monospace', monospace",
  "editor.fontSize": 12,
  "editor.formatOnSave": true,
  "editor.guides.bracketPairs": "active",
  "editor.guides.highlightActiveIndentation": "always",
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "all",
  "editor.rulers": [80],
  "editor.scrollbar.verticalScrollbarSize": 28,
  // Fixes for Default High Contrast and diff files
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "meta.diff.header.from-file",
        "settings": {
          "foreground": "#0088FF"
        }
      },
      {
        "scope": "meta.diff.header.to-file",
        "settings": {
          "foreground": "#0088FF"
        }
      },
      {
        "scope": "meta.diff.header.git",
        "settings": {
          "foreground": "#0088FF"
        }
      }
    ]
  },
  "files.exclude": {
    "**/*.pyc": true
  },
  "git.autofetch": true,
  "githubPullRequests.pullBranch": "never",
  "githubPullRequests.queries": [
    {
      "label": "Waiting For My Review",
      "query": "is:open review-requested:${user}"
    },
    {
      "label": "Assigned To Me",
      "query": "is:open assignee:${user}"
    },
    {
      "label": "Created By Me",
      "query": "is:open author:${user}"
    }
  ],
  "isort.args": ["--profile", "black"],
  "markdown.preview.scrollPreviewWithEditor": false,
  "markdown.styles": [
    "https://use.fontawesome.com/releases/v6.2.1/css/all.css"
  ],
  "markdown.validate.enabled": true,
  "outline.collapseItems": "alwaysCollapse",
  "overtype.paste": true,
  "python.analysis.typeCheckingMode": "basic",
  "python.formatting.provider": "black",
  "redhat.telemetry.enabled": false,
  "search.decorations.badges": false,
  "search.searchEditor.reusePriorSearchConfiguration": true,
  "search.showLineNumbers": true,
  "selectby.regexes": {
    "goToEmptyLine": {
      "flags": "m",
      "moveby": "^[\\s()\\[\\]]*$"
    },
    "goToNonSpace": {
      "flags": "m",
      "moveby": "[^\\s()\\[\\]]"
    }
  },
  "workbench.colorCustomizations": {
    // Nicer colors for diffEditor in Default High Contrast theme
    "diffEditor.insertedLineBackground": "#33ff2e3f",
    "diffEditor.insertedTextBackground": "#33ff2e3f",
    "diffEditor.insertedTextBorder": "#00000000",
    "diffEditor.removedLineBackground": "#ff008f3f",
    "diffEditor.removedTextBackground": "#ff008f53",
    "diffEditor.removedTextBorder": "#00000000",
    "editorIndentGuide.background": "#444444",
    "editorRuler.foreground": "#e4d5094f"
  },
  "workbench.colorTheme": "Default High Contrast",
  "workbench.editor.enablePreview": false,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.titleScrollbarSizing": "large",
  "workbench.editor.wrapTabs": true,
  "workbench.sash.hoverDelay": 100,
  "workbench.sash.size": 8,
  "xml.format.maxLineWidth": 0
}
